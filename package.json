{
  "name": "umc",
  "private": true,
  "type": "module",
  "scripts": {
    "fmt": "dprint fmt",
    "lint": "oxlint --type-aware",
    "typecheck": "tsc --noEmit",
    "build": "tsc && pnpm -r build",
    "test": "vitest",
    "deps": "taze -r -w major && pnpm install",
    "changelog": "changelogithub",
    "script": "pnpm -C scripts script",
    "bump": "bumpp -r"
  },
  "devDependencies": {
    "dprint": "catalog:cli",
    "oxlint": "catalog:cli",
    "oxlint-tsgolint": "catalog:cli",
    "taze": "catalog:cli",
    "typescript": "catalog:types",
    "vitest": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "changelogithub": "catalog:cli",
    "bumpp": "catalog:cli"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*.@(js|ts|tsx|yml|yaml|md|json|html|toml)": "dprint fmt --staged",
    "*.@(js|ts|tsx)": "pnpm lint -- --fix",
    "*.rs": "cargo fmt --"
  },
  "packageManager": "pnpm@10.22.0"
}
