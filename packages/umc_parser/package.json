{
  "name": "umc-parser",
  "version": "0.0.0-alpha.0",
  "description": "The Universal Markup-language Compiler, Rust-based.",
  "main": "index.js",
  "types": "index.d.ts",
  "browser": "browser.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liangmiQwQ/umc.git",
    "directory": "napi/umc_parser"
  },
  "license": "MIT",
  "keywords": [
    "UMC",
    "parser",
    "ast",
    "structured-language"
  ],
  "files": [
    "napi"
  ],
  "scripts": {
    "build": "napi build --output-dir napi --platform",
    "build:release": "pnpm build --release",
    "prepublishOnly": "napi prepublish -t npm"
  },
  "napi": {
    "binaryName": "umc_parser",
    "packageName": "@umc-project/umc-parser",
    "targets": [
      "x86_64-pc-windows-msvc",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "x86_64-unknown-freebsd",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "armv7-unknown-linux-gnueabihf",
      "armv7-unknown-linux-musleabihf",
      "s390x-unknown-linux-gnu",
      "riscv64gc-unknown-linux-gnu",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "wasm32-wasip1-threads"
    ],
    "wasm": {
      "browser": {
        "fs": false
      }
    }
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1",
    "@napi-rs/wasm-runtime": "^1.0.7"
  }
}
